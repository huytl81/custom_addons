<odoo>
    <data>
    <record id="custom_res_groups_form_view_inherit" model="ir.ui.view">
        <field name="name">res.groups.form.custom.fields</field>
        <field name="model">res.groups</field>
        <field name="inherit_id" ref="base.view_groups_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='share']" position="before">
                    <field name="enable_chatter_group" string="Enable Chatter Group"/>
            </xpath>
        </field>
    </record>
    </data>
</odoo>
