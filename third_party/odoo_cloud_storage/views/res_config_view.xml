<odoo>
	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.website.vouchers</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="20" />
		<field name="inherit_id" ref="base.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//form" position="inside">
				<app data-string="Odoo Cloud Storage" string="Odoo Cloud Storage" name="odoo_cloud_storage" groups="odoo_cloud_storage.group_cloud_manager">
					<block title="Odoo Cloud Storage">
						<setting>
							<div class="content-group">
								<div class="row mt8">
									<label for="cloud_connection_ids" string="Cloud Connections" />
									<div class="text-muted">
										These Connections Will Be Use To 
									Export Attachment In Real Time To Cloud
									</div>
									<div class="text-muted">
										<field name="cloud_connection_ids" widget="many2many_tags"/>
									</div>
								</div>
								<div class="row mt8">
									<label for="create_odoo_attachment" string="Create Odoo Attachment" />
									<div class="text-muted">
										This Boolean Field Will Be For Create Attachment In Odoo.
									</div>
									<div class="text-muted">
										<field name="create_odoo_attachment"/>
									</div>
								</div>
								<div class="row mt8">
									<label for="read_cloud_file" string="Read File From Cloud" />
									<div class="text-muted">
										This Boolean Field Will Be Use To Read Files From Cloud
									</div>
									<div class="text-muted">
										<field name="read_cloud_file" />
									</div>
								</div>
							</div>
						</setting>
						<setting>
							<div class="row mt8">
								<label for="export_real_time" string="Export Attachment Real Time" />
								<div class="text-muted">
									This Boolean Field Will Be Use To Export Attachment In Real Time To Cloud
								</div>
								<div class="text-muted">
									<field name="export_real_time" />
								</div>
							</div>
							<div class="row mt8">
								<label for="export_limit" string="Bulk Export Attachment Limit" />
								<div class="text-muted">
									This Integer Value Will Be Use For Limit On Bulk Export Of Attachments
								</div>
								<div class="text-muted">
									<field name="export_limit" />
								</div>
							</div>
						</setting>
					</block>
				</app>
			</xpath>
		</field>
	</record>
	<record id="action_cloud_config_settings" model="ir.actions.act_window">
		<field name="name">Cloud</field>
		<field name="res_model">res.config.settings</field>
		<field name="view_mode">form</field>
		<field name="target">inline</field>
		<field name="context">{'module' : 'odoo_cloud_storage', 'bin_size': False}</field>
	</record>

	<menuitem id="menu_cloud_general_settings"
		name="Settings"
		sequence="40"
		action="action_cloud_config_settings"
		groups="odoo_cloud_storage.group_cloud_manager"
		parent="odoo_cloud_storage.menu_odoo_setting"/>
</odoo>
