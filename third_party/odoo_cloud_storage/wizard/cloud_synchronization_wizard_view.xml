<odoo>
    <record id="id_cloud_synchronization_wizard_form" model="ir.ui.view">
            <field name="name">Cloud Synchronization Wizard</field>
            <field name="model">cloud.synchronization.wizard</field>
            <field name="arch" type="xml">
                <form string="Sync">
                    <group>
                        <field name='folder_id' widget="selection" 
						domain="[('model_id','=', model_id),('instance_id','=',instance_id)]" 
						invisible = "folder_count &lt; 2" />
                        <field name="folder_count" invisible="1"/>
						<field name="action" invisible="1"/>
                        <field name="instance_id" widget="selection" required='1' string="Cloud Connection"  
                        invisible = "instance_count &lt; 2" />
                        <field name='model_id' invisible="1"/>
                        <field name='instance_count' invisible="1"/>
                    </group>
                    <footer>
                        <button name="start_action_cloud_synchronization"
                                string="Action Now"
                                type="object"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class='oe_link' special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>