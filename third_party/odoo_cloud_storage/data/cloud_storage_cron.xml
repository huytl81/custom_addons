<odoo>
	<data noupdate='1'>
		<record id="ir_cron_cloud_upload" model="ir.cron">
            <field name="name">Cloud: upload attachments to cloud</field>
            <field name="model_id" ref="odoo_cloud_storage.model_cloud_snippet"/>
            <field name="state">code</field>
            <field name="code">model.upload_attachment_to_cloud()</field>
			<field name="interval_number">5</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
        </record>
		
		<record id="ir_cron_cloud_download" model="ir.cron">
            <field name="name">Cloud: download attachments from cloud</field>
            <field name="model_id" ref="odoo_cloud_storage.model_cloud_snippet"/>
            <field name="state">code</field>
            <field name="code">model.download_attachment_from_cloud()</field>
			<field name="interval_number">4</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
        </record>
		
		<function
			model="res.config.settings"
			name="set_cloud_config_values"/>
	</data>
</odoo>