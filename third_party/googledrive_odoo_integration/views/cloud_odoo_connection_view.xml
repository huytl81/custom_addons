<odoo>
    <data>
        <!-- Cloud Instance Configuration -->
        <record id="cloud_odooo_connection_form" model="ir.ui.view">
            <field name="name">cloud.odoo.connectionform</field>
            <field name="model">cloud.odoo.connection</field>
            <field name="type">form</field>
            <field name='inherit_id' ref='odoo_cloud_storage.cloud_odoo_connection_mapping_tree_form'/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[2]" position='replace'>
                    <page string="API Credentials">
                        <button name="test_googledrive_connection"
								type='object' 
								class="oe_highlight" 
								string='Test GoogleDrive Connection'/>
                        <h2 style="margin-top: 10px !important;background-color: #e9ecef;padding-left: 8px;">
                            API Credentials
                        </h2>
                        <div id="api_reference">
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label string="Client Id" for="api_key"/>
                                    <div>
                                            <field name="api_key" placeholder="Example: 542876777777-alnfltm4e1us7e9v74p3qdddvm77rh1b.apps.googleusercontent.com" readonly = "state == 'done'"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label string="Client Secret Key" for="api_password"/>
                                    <div>
                                        <field name="api_password" placeholder="Example: _1g7MbKN28IQzcg-2qdratY7" readonly = "state == 'done'"/>
                                    </div>
                                </div>
                            </div>
                        </div>
						<h2 style="margin-top: 10px !important;background-color: #e9ecef;padding-left: 8px;">
                            Token Details
						</h2>
						<div class="row mt16 o_settings_container">
							<div class="col-12 o_setting_box">
								<div class="o_setting_right_pane">
									<label string="Access Token" for="api_token"/>
									<div>
										<field name="api_token" readonly="1" widget='text' class='w-100' style="overflow-wrap:anywhere"/>
									</div>
								</div>
							</div>
							<div class="col-12 o_setting_box">
								<div class="o_setting_right_pane">
									<label string="Refresh Token" for="refresh_token"/>
									<div>
										<field name="refresh_token" readonly="1" widget='text' class='w-100' style="overflow-wrap:anywhere"/>
									</div>
								</div>
							</div>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
