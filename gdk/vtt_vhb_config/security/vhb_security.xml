<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--New groups-->
    <data>
        <!--Product create group-->
        <record id="vtt_groups_vhb_product_creation" model="res.groups">
            <field name="name">Product Creation</field>
        </record>
        <record model="ir.model.access" id="vtt_access_vhb_creation_product_product">
            <field name="name">Product Creation Access Product</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="group_id" ref="vtt_groups_vhb_product_creation"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>
        <record model="ir.model.access" id="vtt_access_vhb_creation_product_template">
            <field name="name">Product Creation Access Product Template</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="group_id" ref="vtt_groups_vhb_product_creation"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>
    </data>

    <!--Modify existed groups-->
    <data>
