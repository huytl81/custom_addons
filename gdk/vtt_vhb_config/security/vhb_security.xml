        </record>

        <!--Sale Manager edit Order Date-->
        <record id="sales_team.group_sale_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('edit_order_date.edit_order_date_group_user'))]"/>
        </record>

