<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--MRP Production Print-->
    <template id="vtt_report_mrporder" inherit_id="mrp.report_mrporder">
        <!--Date deadline-->
        <xpath expr="//div[@t-if='o.user_id']" position="after">
            <div class="col-3" t-if="o.date_finished">
                <strong>Date:</strong><br/>
                <span t-field="o.date_finished">2023-09-15</span>
            </div>
        </xpath>

        <!--Material Require-->
        <xpath expr="//div[@t-if='o.qty_producing']" position="after">
            <div class="col-3" t-if="o.date_material_deadline">
                <strong>Material Require:</strong><br/>
                <span t-field="o.date_material_deadline">2023-09-15</span>
            </div>
        </xpath>
    </template>

    <!--MRP Production Components-->
    <template id="vtt_report_mrp_production_components" inherit_id="mrp.report_mrp_production_components">
        <xpath expr="//th[@t-if='has_product_barcode']" position="before">
            <th width="15%" class="text-center">Require</th>
        </xpath>

        <xpath expr="//td[@t-if='has_product_barcode']" position="before">
            <td width="15%" class="text-center">
                <span t-field="raw_line.date_material_deadline">2023-09-15</span>
            </td>
        </xpath>
    </template>
</odoo>