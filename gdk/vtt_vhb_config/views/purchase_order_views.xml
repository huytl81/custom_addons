<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Purchase Order views-->
    <data>
        <!--Tree view add column-->
        <record id="vtt_view_tree_purchase_order_inherited" model="ir.ui.view">
            <field name="name">Purchase Order List VHB Inherited</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
            <field name="arch" type="xml">
                <field name="amount_total" position="after">
                    <field name="vtt_amount_to_invoice" widget="monetary" optional="hide"/>
                </field>
            </field>
        </record>

        <record id="vtt_view_tree_purchase_order_kpis_inherited" model="ir.ui.view">
            <field name="name">Purchase Order List KPIS VHB Inherited</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <field name="amount_total" position="after">
                    <field name="vtt_amount_to_invoice" widget="monetary" optional="hide"/>
                </field>
            </field>
        </record>
    </data>
</odoo>