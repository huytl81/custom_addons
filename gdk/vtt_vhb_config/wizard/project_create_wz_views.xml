<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Project Create Wizard views-->
    <data>
        <!--Form view-->
        <record id="vtt_view_form_project_create_wz" model="ir.ui.view">
            <field name="name">Project Create Wizard Form</field>
            <field name="model">vtt.project.create.wz</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <sheet>
                        <div class="oe_title mb-lg-3 mb-md-2">
                            <label for="name" string="Name"/>
                            <h1>
                                <field name="name" class="o_project_name" placeholder="e.g. Office Party"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="order_id" invisible="1"/>
                                <field name="sale_line_id" invisible="1"/>
                                <field name="partner_id"/>
                                <field name="project_template_id"/>
                            </group>
                        </group>
                    </sheet>

                    <footer>
                        <button string="Create project" name="create_sale_project" type="object" class="btn-primary o_open_tasks" data-hotkey="q"/>
                        <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>