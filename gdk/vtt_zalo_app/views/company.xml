<odoo>
    <!-- Company views -->
  <data>

    <record id="zalo_res_company_inherit_form" model="ir.ui.view">
        <field name="name">Zao - Inherit company form</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
<!--      <field name="mode">form</field>-->
      <field name="arch" type="xml">
          <field name="currency_id" position="after">
              <field name="zalo_app_qr" widget="image"/>
              <field name="bank_qr" widget="image"/>
            <field name="zalo_app_link" string="Zalo app link"/>
          </field>
      </field>
    </record>
  </data>
</odoo>