<odoo>
    <data>
        <record id="view_zalo_webhook_data_tree" model="ir.ui.view">
            <field name="name">zalo.webhook.data.tree</field>
            <field name="model">zalo.webhook.data</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc">
                    <field name="signature"/>
                </tree>
            </field>
        </record>

        <record id="view_zalo_webhook_data_form" model="ir.ui.view">
            <field name="name">zalo.webhook.data.form</field>
            <field name="model">zalo.webhook.data</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="signature"/>
                            <field name="data"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_zalo_webhook_data" model="ir.actions.act_window">
            <field name="name">Zalo webhook data</field>
            <field name="res_model">zalo.webhook.data</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_zalo_webhook_data" name="Webhook data" parent="vtt_zalo_mini_app.vtt_menu_zalo_root" action="action_zalo_webhook_data" groups="base.group_system"/>
    </data>
</odoo>