<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Zalo Product Categories -->
    <record id="zalo_product_category_form_view" model="ir.ui.view">
        <field name="name">zalo.product.category.form</field>
        <field name="model">zalo.product.category</field>
        <field name="arch" type="xml">
            <form string="Zalo Product Category">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
<!--                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>-->
                    <div class="float-start">
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="active"/>
<!--                            <field name="parent_id"/>-->
<!--                            <field name="website_id" options="{'no_create': True}" groups="website.group_multi_website"/>-->
<!--                            <field name="sequence" groups="base.group_no_one"/>-->
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="zalo_product_category_tree_view" model="ir.ui.view">
        <field name="name">zalo.product.category.tree</field>
        <field name="model">zalo.product.category</field>
        <field name="arch" type="xml">
            <tree string="Danh mục sản phẩm">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="active" widget="boolean"/>
                <!-- <field name="image" widget="image" class="oe_avatar"/> -->
<!--                <field name="website_id" groups="website.group_multi_website"/>-->
            </tree>
        </field>
    </record>

    <record id="zalo_product_category_action" model="ir.actions.act_window">
        <field name="name">Zalo Categories</field>
        <field name="res_model">zalo.product.category</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
<!--        <field name="help" type="html">-->
<!--          <p class="o_view_nocontent_smiling_face">-->
<!--            Define a new category-->
<!--          </p><p>-->
<!--            Categories are used to browse your products through the-->
<!--            touchscreen interface.-->
<!--          </p>-->
<!--        </field>-->
    </record>

<!--    <menuitem id="menu_catalog_categories"-->
<!--                action="product_public_category_action"-->
<!--                sequence="4"/>-->

</odoo>
