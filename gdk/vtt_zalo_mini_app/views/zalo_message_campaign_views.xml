<odoo>
    <data>
        <record id="view_zalo_message_campaign_tree" model="ir.ui.view">
            <field name="name">zalo.message.campaign.tree</field>
            <field name="model">zalo.message.campaign</field>
            <field name="arch" type="xml">
                <tree string="Zalo Message Campaigns">
                    <field name="name" string="Tên chiến dịch"/>
                    <field name="start_time" string="Ngày bắt đầu"/>
                    <field name="daily_send_time" string="Ngày kết thúc"/>
                    <field name="daily_send_time" string="Thời gian gửi"/>
                    <field name="enable" string="Trạng thái kích hoạt"/>
                    <!-- <field name="next_send_time"/> -->
                    <!-- <field name="recipient_ids"/> -->
                </tree>
            </field>
        </record>

        <record id="view_zalo_message_campaign_form" model="ir.ui.view">
            <field name="name">zalo.message.campaign.form</field>
            <field name="model">zalo.message.campaign</field>
            <field name="arch" type="xml">
                <form string="Zalo Message Campaign">
                    <header>
                        <button name="action_send_zalo_messages" type="object" string="Thực hiện gửi tin" class="btn-primary" invisible="enable == False"/>
                        <button name="action_view_logs" type="object" string="Xem log" class="btn-secondary"/>
                        <!-- <button name="action_view_recipients" type="object" string="Người nhận" class="btn-primary"/> -->
                        <!-- <button name="action_activate" type="object" string="Activate" class="btn-primary"/>
                        <button name="action_deactivate" type="object" string="Deactivate" class="btn-primary" /> -->
                    </header>
                    <sheet>
                        <group>
                            <field name="name" string="Tên chiến dịch"/>
                            <field name="campaign_type" string="Kiểu gửi tin"/>
                            <field name="start_time" string="Ngày bắt đầu"/>
                            <field name="end_time" string="Ngày kết thúc"/>
                            <field name="enable" string="Kích hoạt" widget="boolean"/>
                            <field name="daily_send_time" string="Thời gian gửi hàng ngày"/>
                            <!-- <field name="next_send_time" readonly="1"/> -->
                            <field name="template_id" string="Mẫu tin nhắn" domain="[('type', '=', 'oa_promotion')]"/>
                            <!-- <field name="recipient_ids"/> -->                            
                            <field name="recipient_condition" widget="domain" options="{'model': 'res.partner'}" string="Điều kiện gửi tin"/>                                                                                    
                            <!-- <field name="today_execute_time" readonly="1" string="Số lần chạy hôm nay"/> -->
                            <!-- <field name="today_success_message_count" readonly="1" string="Số tin gửi thành công hôm nay"/> -->
                            <field name="last_execute_time" readonly="1" string="Lần chạy cuối cùng"/>
                            <field name="successful_recipients_count" readonly="1" string="Số lượng người đã nhận tin"/>
                            <field name="excluded_recipient_ids" widget="many2many_tags" readonly="1" string="Người đã nhận"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_zalo_message_campaign" model="ir.actions.act_window">
            <field name="name">Chiến dịch gửi tin</field>
            <field name="res_model">zalo.message.campaign</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_zalo_message_campaign" name="Chiến dịch gửi tin" parent="vtt_zalo_mini_app.vtt_menu_zalo_root" action="action_zalo_message_campaign" sequence="10"/>

        <!-- <record id="action_view_recipients" model="ir.actions.act_window">
            <field name="name">Recipients</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('id', 'in', context.get('recipient_ids', []))]</field>
        </record> -->
    </data>
</odoo>