<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="vtt_zalo_mini_app.SearchProductsPanel">
        <ActionPanel title="title">
            <div class="d-flex pb-2">
                <div class="input-group">
                    <div class="o_searchview form-control d-flex align-items-center py-1" role="search" aria-autocomplete="list">
                        <div class="o_searchview_input_container d-flex flex-grow-1 flex-wrap gap-1">
                            <input type="text" class="o_searchview_input flex-grow-1 w-auto border-0" placeholder="Search products" t-model="state.searchTerm" t-on-keydown="onKeydownSearch" t-ref="autofocus" role="searchbox"/>
                        </div>
                    </div>
                    <button class="btn" t-att-class="state.searchedTerm === state.searchTerm ? 'btn-outline-primary' : 'btn-primary'" t-on-click="() => this.search()" aria-label="Search button">
                        <i t-if="!state.searching" class="o_searchview_icon oi oi-search" role="img" aria-label="Search Products" title="Search Products"/>
                        <i t-else="" class="fa fa-spin fa-spinner" aria-label="Search in progress" title="Search in progress"/>
                    </button>
                </div>
            </div>
            <p t-if="state.products.length > 0" class="o-mail-SearchProductsPanel-title py-1 mb-0 fw-bolder text-center text-uppercase text-700">
                <t t-esc="state.products.length"/> products found
            </p>
            <div class="o_search_products_results">
                <t t-if="state.products.length > 0">
                    <t t-foreach="state.products" t-as="product" t-key="product.id">
                        <div class="o_search_product_item d-flex align-items-center">
                            <img t-att-src="'/web/image/product.template/' + product.id + '/image_128'" class="img-thumbnail me-2" style="width: 50px; height: 50px;"/>
                            <div class="flex-grow-1">
                                <div><t t-esc="product.name"/></div>
                                <div class="text-muted"><t t-esc="product.list_price"/> $</div>
                            </div>
                            <button class="btn btn-primary ms-2" t-on-click="() => this.onClickJump(product.name, product.id)">Send Image</button>
                        </div>
                    </t>
                </t>
                <t t-else="">
                    <div t-if="state.searchedTerm" class="o_search_product_no_results">No products found</div>
                </t>
            </div>
        </ActionPanel>
    </t>
</templates>