<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Task Reason Type views-->
    <data>
        <!--Tree views-->
        <record id="vtt_view_tree_project_task_reason_type" model="ir.ui.view">
            <field name="name">Task Reason Type List</field>
            <field name="model">vtt.project.task.reason.type</field>
            <field name="arch" type="xml">
                <tree editable="top" string="Task Reason Types">
                    <field name="name"/>
                    <field name="detail_need" widget="boolean_toggle"/>
                    <field name="color" widget="color_picker"/>
                </tree>
            </field>
        </record>
    </data>

    <!--Actions-->
    <data>
        <!--Task Reason Type List action-->
        <record id="vtt_act_window_project_task_reason_type" model="ir.actions.act_window">
            <field name="name">Task Reason Types</field>
            <field name="res_model">vtt.project.task.reason.type</field>
            <field name="view_mode">tree</field>
        </record>
    </data>

    <!--Menus-->
    <data>
        <menuitem
            id="vtt_menu_project_config_project_task_reason_type"
            name="Task Reason Types"
            parent="project.menu_project_config"
            action="vtt_act_window_project_task_reason_type"
            sequence="20"/>
    </data>
</odoo>