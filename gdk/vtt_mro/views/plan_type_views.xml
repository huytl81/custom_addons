<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Maintenance Plan Type views-->
    <data>
        <!--Form view-->
        <record id="vtt_view_form_maintenance_plan_type" model="ir.ui.view">
            <field name="name">Plan Type Form</field>
            <field name="model">vtt.maintenance.plan.type</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <!--<div class="oe_button_box" name="button_box">
                            <button name="action_view_repair" type="object"
                                class="oe_stat_button" icon="fa-wrench"
                                invisible="repair_order_count == 0">
                                <div class="o_stat_info">
                                    <field name="repair_order_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Repairs</span>
                                </div>
                            </button>
                        </div>-->

                        <!--Ribbons-->
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>

                        <!--Invisible fields-->
                        <field name="active" invisible="1"/>

                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <label for="period_value"/>
                                <div>
                                    <field name="period_value" class="oe_inline"/>
                                    <field name="period_type" class="oe_inline"/>
                                </div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Tree view-->
        <record id="vtt_view_tree_maintenance_plan_type" model="ir.ui.view">
            <field name="name">Plan Type List</field>
            <field name="model">vtt.maintenance.plan.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="period_type"/>
                    <field name="period_value"/>
                </tree>
            </field>
        </record>

    </data>

    <!--Actions-->
    <data>
        <record id="vtt_act_window_maintenance_plan_type" model="ir.actions.act_window">
            <field name="name">Plan Type List</field>
            <field name="res_model">vtt.maintenance.plan.type</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>

    <!--Menus-->
    <data>
        <menuitem id="vtt_menu_repair_config_maintenance_plan_type"
                  name="Maintenance Plan Type"
                  action="vtt_act_window_maintenance_plan_type"
                  parent="vtt_menu_repair_config_maintenance"
                  sequence="10"/>
    </data>
</odoo>