<odoo>
    <data>
        <record id="view_zalo_message_parameter_tree" model="ir.ui.view">
            <field name="name">zalo.message.parameter.tree</field>
            <field name="model">zalo.message.parameter</field>
            <field name="arch" type="xml">
                <tree string="Zalo Message Parameters">
                    <field name="key"/>
                    <field name="value"/>
                    <field name="template_id"/>
                </tree>
            </field>
        </record>

        <record id="view_zalo_message_parameter_form" model="ir.ui.view">
            <field name="name">zalo.message.parameter.form</field>
            <field name="model">zalo.message.parameter</field>
            <field name="arch" type="xml">
                <form string="Zalo Message Parameter">
                    <sheet>
                        <group>
                            <field name="key"/>
                            <field name="value"/>
                            <field name="template_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_zalo_message_parameter" model="ir.actions.act_window">
            <field name="name">Zalo Message Parameters</field>
            <field name="res_model">zalo.message.parameter</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <menuitem id="menu_zalo_message_parameter" name="Message Parameters" parent="vtt_zalo_mini_app.vtt_menu_zalo_root" action="action_zalo_message_parameter"/> -->
    </data>
</odoo>