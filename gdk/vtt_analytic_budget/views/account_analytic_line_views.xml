<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Account Analytic Line views-->
    <data>
        <!--Tree view add budget warning-->
        <record id="vtt_view_tree_account_analytic_line_budget" model="ir.ui.view">
            <field name="name">Analytic Line List add Budget Warning</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_line_tree"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="decoration-warning">not vtt_budget_line_id</attribute>
                </tree>

                <field name="amount" position="after">
                    <field name="vtt_budget_line_id" column_invisible="1"/>
                </field>
            </field>
        </record>

        <!--Tree view show product-->
        <record id="vtt_view_tree_account_analytic_line_show_product" model="ir.ui.view">
            <field name="name">Analytic Line List show Product</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="account.view_account_analytic_line_tree_inherit_account"/>
            <field name="arch" type="xml">
                <field name="product_id" position="attributes">
                    <attribute name="optional">show</attribute>
                </field>
            </field>
        </record>

        <!--Search view add budget warning-->
        <record id="vtt_view_search_account_analytic_line_budget" model="ir.ui.view">
            <field name="name">Analytic Line Filter add Budget Warning</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_line_filter"/>
            <field name="arch" type="xml">
                <filter name="month" position="before">
                    <filter name="filter_budget_need" string="No Register Budget Yet" domain="[('vtt_budget_line_id', '=', False)]"/>
                    <separator/>
                </filter>
            </field>
        </record>
    </data>
</odoo>