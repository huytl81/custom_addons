<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Budget Template views-->
    <data>
        <!--Form view-->
        <record id="vtt_view_form_analytic_budget_template" model="ir.ui.view">
            <field name="name">Budget Template Form</field>
            <field name="model">vtt.analytic.budget.template</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="budget_custom_import" string="Import Items" type="object" invisible="not name"/>
                        <button name="re_arrange_lines" string="Re-Arrange" type="object" invisible="not line_ids"/>
                    </header>
                    <sheet>

                        <!--Invisible fields-->

                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>

                        <notebook>
                            <page string="Categories">
                                <field name="line_ids" widget="hierarchy_list" mode="tree,kanban">
                                    <tree editable="bottom">
                                        <control>
                                            <create name="add_section_control" string="Add a category" context="{'default_type': 'group'}"/>
                                        </control>
                                        <field name="analytic_template_id" column_invisible="1"/>
                                        <field name="product_uom_category_id" column_invisible="True"/>
                                        <field name="type" column_invisible="1"/>
                                        <field name="display_type" column_invisible="1"/>
                                        <field name="sequence" widget="handle"/>
                                        <field name="name" required="type == 'group'"/>
                                        <field name="full_path" column_invisible="1"/>
                                        <field name="full_sequence" column_invisible="1"/>
                                        <field name="level" column_invisible="1"/>
                                        <field name="parent_id" domain="[('type', '=', 'group'), ('analytic_template_id', '=', analytic_template_id), ('id', '!=', id), '!', ('id', 'child_of', id) ]" context="{'search_default_analytic_template_id': analytic_template_id}" optional="hide"/>
                                        <field name="product_id" domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" widget="sol_product_many2one" readonly="type == 'group'"/>
                                        <field name="product_uom_qty" invisible="type == 'group'"/>
                                        <field name="product_uom" string="UoM" groups="uom.group_uom" options="{'no_open': True}" force_save="1" optional="show" invisible="type == 'group'"/>
                                        <button name="action_add_item_wz" type="object" icon="fa-plus" aria-label="Add Items" title="Add Items" invisible="type == 'item'"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Other">
                                <group>
                                    <group>
                                        <field name="company_id"/>
                                    </group>
                                </group>

                            </page>
                        </notebook>
                    </sheet>
                    <!--<div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>-->
                </form>
            </field>
        </record>

        <!--List hierarchy view-->
        <record id="vtt_view_hierarchy_analytic_budget_template" model="ir.ui.view">
            <field name="name">Budget Template Hierarchy</field>
            <field name="model">vtt.analytic.budget.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
    </data>

    <!--Actions-->
    <data>
        <record id="vtt_act_window_analytic_budget_template" model="ir.actions.act_window">
            <field name="name">Budget Templates</field>
            <field name="res_model">vtt.analytic.budget.template</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--<record id="vtt_act_window_analytic_budget_template_line" model="ir.actions.act_window">
            <field name="name">Budget Template Items</field>
            <field name="res_model">vtt.analytic.budget.template.line</field>
            <field name="view_mode">tree,form</field>
        </record>-->
    </data>

    <!--Menus-->
    <data>
        <menuitem id="vtt_menu_account_config_analytic_budget_template"
                  name="Budget Template"
                  action="vtt_act_window_analytic_budget_template"
                  parent="account.menu_analytic_accounting"
                  sequence="10"/>
        <!--<menuitem id="vtt_menu_account_config_analytic_budget_template_line"
                  name="Budget Template Items"
                  action="vtt_act_window_analytic_budget_template_line"
                  parent="account.menu_analytic_accounting"
                  sequence="20"/>-->
    </data>
</odoo>