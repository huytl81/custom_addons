<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Project Template views-->
    <data>
        <!--Form view-->
        <record id="vtt_view_form_project_template" model="ir.ui.view">
            <field name="name">Project Template Form</field>
            <field name="model">vtt.project.template</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="get_project" type="object" string="Create New Project" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1 class="d-flex flex-row">
                                <field name="name" options="{'line_breaks': False}" widget="text" class="o_text_overflow" placeholder="e.g. Tasks by Production"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="description" string="Description">
                                <field name="description" options="{'resizable': false}" placeholder="Project description..."/>
                            </page>
                            <page name="settings" string="Settings">
                                <group>
                                    <group>
                                        <field name="privacy_visibility" widget="radio"/>
                                    </group>
                                </group>
                            </page>
                            <page name="stages" string="Tasks Stages">
                                <field name="type_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="fold"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="tasks" string="Tasks">
                                <field name="task_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--List view-->
        <record id="vtt_view_tree_project_template" model="ir.ui.view">
            <field name="name">Project Template List</field>
            <field name="model">vtt.project.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                </tree>
            </field>
        </record>
    </data>

    <!--Actions-->
    <data>
        <record id="vtt_act_window_project_template" model="ir.actions.act_window">
            <field name="name">Project Templates</field>
            <field name="res_model">vtt.project.template</field>
            <!--<field name="context">{'search_default_active': 1}</field>-->
        </record>
    </data>

    <!--Menus-->
    <data>
        <menuitem name="Project Templates"
                  id="vtt_menu_project_config_project_template"
                  parent="project.menu_project_config"
                  action="vtt_act_window_project_template"
                  sequence="20"/>
    </data>
</odoo>