<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--User views-->
    <data>
        <!--Form view add type-->
        <record id="vtt_view_form_res_users_type" model="ir.ui.view">
            <field name="name">User Form add Type</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <!--Add user type to form-->
                <field name="tz_offset" position="after">
                    <field name="vtt_user_type" groups="base.group_system"/>
                </field>
            </field>
        </record>
    </data>

    <!--Actions-->
    <data>
        <record id="base.action_res_users" model="ir.actions.act_window">
            <field name="domain">[('vtt_user_type', '!=', 'admin')]</field>
        </record>
    </data>
</odoo>