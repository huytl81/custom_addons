<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Zalo Product Categories -->
    <record id="vtt_zalo_news_form_view" model="ir.ui.view">
        <field name="name">vtt.zalo.news.form</field>
        <field name="model">vtt.zalo.news</field>
        <field name="arch" type="xml">
            <form string="News">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="float-start">
                        <group>
                            <field name="title"/>
                            <field name="is_hot_news"/>
                            <field name="publish_date"/>
                            <field name="public_link"/>
                            <field name="author"/>
                            <field name="description"/>
<!--                            <field name="parent_id"/>-->
<!--                            <field name="website_id" options="{'no_create': True}" groups="website.group_multi_website"/>-->
<!--                            <field name="sequence" groups="base.group_no_one"/>-->
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="vtt_zalo_news_tree_view" model="ir.ui.view">
        <field name="name">vtt.zalo.news.tree</field>
        <field name="model">vtt.zalo.news</field>
        <field name="arch" type="xml">
            <tree string="Zalo News">
<!--                <field name="sequence" widget="handle"/>-->
                <field name="title"/>
                <field name="publish_date"/>
                <!--                <field name="website_id" groups="website.group_multi_website"/>-->
            </tree>
        </field>
    </record>

    <record id="vtt_zalo_news_action" model="ir.actions.act_window">
        <field name="name">Zalo News</field>
        <field name="res_model">vtt.zalo.news</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
<!--        <field name="help" type="html">-->
<!--          <p class="o_view_nocontent_smiling_face">-->
<!--            Define a new category-->
<!--          </p><p>-->
<!--            Categories are used to browse your products through the-->
<!--            touchscreen interface.-->
<!--          </p>-->
<!--        </field>-->
    </record>

</odoo>
