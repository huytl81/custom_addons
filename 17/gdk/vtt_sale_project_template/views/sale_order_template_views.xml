<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Order Template views-->
    <data>
        <!--Form view add Project Template-->
        <record id="vtt_view_form_sale_order_template_project_template" model="ir.ui.view">
            <field name="name">Sale Order Template Form add Project Template</field>
            <field name="model">sale.order.template</field>
            <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
            <field name="arch" type="xml">
                <page name="terms_and_conditions" position="after">
                    <page name="project_settings" string="Project Settings">
                        <group>
                            <group>
                                <field name="project_template_id"/>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>
    </data>
</odoo>