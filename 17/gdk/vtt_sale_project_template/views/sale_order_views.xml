<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Sale Order views-->
    <data>
        <!--Form view add Project Template-->
        <record id="vtt_view_form_sale_order_project_template" model="ir.ui.view">
            <field name="name">Sale Order Form add Project Template</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <button name="action_cancel" position="before">
                    <button name="start_project_from_template" type="object" string="Create Project" class="btn-primary" invisible="vtt_project_id != False or state != 'sale'"/>
                </button>

                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_open_sale_project" icon="fa-tasks" invisible="vtt_project_id == False or state != 'sale'">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Manager Project</span>
                        </div>
                    </button>
                </div>

                <field name="company_id" position="after">
                    <field name="vtt_project_id" invisible="1"/>
                    <field name="project_template_id" invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>