<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Equipment views-->
    <data>
        <!--Form view-->
        <record id="vtt_view_form_equipment" model="ir.ui.view">
            <field name="name">Equipment Form</field>
            <field name="model">vtt.equipment.equipment</field>
            <field name="arch" type="xml">
                <form>
                    <header></header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_repair" type="object"
                                class="oe_stat_button" icon="fa-wrench"
                                invisible="repair_order_count == 0">
                                <div class="o_stat_info">
                                    <field name="repair_order_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Repairs</span>
                                </div>
                            </button>
                            <button name="action_view_maintenance" type="object"
                                class="oe_stat_button" icon="fa-calendar-check-o">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Maintenance</span>
                                </div>
                            </button>
                            <button name="action_view_warranty" type="object"
                                class="oe_stat_button" icon="fa-ticket">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Warranty</span>
                                </div>
                            </button>
                        </div>

                        <!--Invisible fields-->

                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="model_name"/>
                                <field name="manufacture"/>
                                <field name="serial_number"/>
                                <field name="manufacture_year"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="date_warranty"/>
                            </group>
                            <group></group>
                            <group string="Category">
                                <field name="categ_id"/>
                                <field name="product_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!--Tree view-->
        <record id="vtt_view_tree_equipment" model="ir.ui.view">
            <field name="name">Equipment List</field>
            <field name="model">vtt.equipment.equipment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="model_name"/>
                    <field name="manufacture"/>
                    <field name="serial_number" optional="hide"/>
                    <field name="manufacture_year" optional="hide"/>
                    <field name="activity_ids" widget="list_activity" optional="show"/>
                    <field name="date_warranty" decoration-danger="date_warranty &lt; context_today()"/>
                    <field name="categ_id"/>
                    <field name="partner_id"/>
                    <field name="maintenance_plan_this_month" column_invisible="1"/>
                    <field name="maintenance_plan_next_month" column_invisible="1"/>
                </tree>
            </field>
        </record>

        <!--Kanban view-->
        <record id="vtt_view_kanban_equipment" model="ir.ui.view">
            <field name="name">Equipment Kanban</field>
            <field name="model">vtt.equipment.equipment</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="model_name"/>
                    <field name="manufacture"/>
                    <field name="partner_id"/>
                    <field name="categ_id"/>
                    <field name="date_warranty"/>
                    <progressbar field="activity_state" colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong><field name="name"/></strong>
                                        <span class="o_kanban_record_subtitle"><span t-esc="record.model_name.value"/></span>
                                        <span class="o_kanban_record_subtitle"><span t-esc="record.manufacture.value"/></span>
                                    </div>
                                    <strong>
                                        <field name="date_warranty" widget="date"/>
                                    </strong>
                                </div>

                                <strong class="o_kanban_record_title"><span><t t-esc="record.partner_id.value"/></span></strong>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <span><t t-esc="record.categ_id.value"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!--Search view-->
        <record id="vtt_view_search_equipment" model="ir.ui.view">
            <field name="name">Equipment Filter</field>
            <field name="model">vtt.equipment.equipment</field>
            <field name="arch" type="xml">
                <search string="Equipment Filter">
                    <field name="name" filter_domain="['|', ('partner_id.name', 'ilike', self), ('name', 'ilike', self)]" string="Name"/>
                    <field name="partner_id"/>
                    <field name="model_name"/>
                    <field name="manufacture"/>
                    <field name="manufacture_year"/>
                    <field name="categ_id"/>
                    <field name="display_name" filter_domain="[('date_warranty', 'ilike', self)]" string="Warranty"/>
                    <separator/>
                    <!--<filter string="Archived" domain="[('active', '=', False)]" name="inactive"/>-->
                    <filter name="filter_this_month" string="Maintenance This Month" domain="[('maintenance_plan_this_month', '!=', False)]"/>
                    <filter name="filter_next_month" string="Maintenance Next Month" domain="[('maintenance_plan_next_month', '!=', False)]"/>
                    <!--<separator/>
                    <filter string="Under Warranty" domain="[('date_warranty', '&lt;=', context_today())]" name="in_warranty"/>-->
                    <group expand="0" string="Group By...">
                        <filter string="Partner" name="groupby_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                        <filter string="Model" name="groupby_model_name" domain="[]" context="{'group_by': 'model_name'}"/>
                        <filter string="Manufacture" name="groupby_manufacture" domain="[]" context="{'group_by': 'manufacture'}"/>
                        <filter string="Category" name="groupby_categ" domain="[]" context="{'group_by': 'categ_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>

    <!--Actions-->
    <data>
        <record id="vtt_act_window_equipment" model="ir.actions.act_window">
            <field name="name">Equipments</field>
            <field name="res_model">vtt.equipment.equipment</field>
            <field name="view_mode">tree,form,kanban,activity</field>
        </record>
    </data>

    <!--Menus-->
    <data>
        <menuitem id="vtt_menu_repair_equipment_equipment"
                  name="Equipment"
                  action="vtt_act_window_equipment"
                  parent="vtt_menu_repair_equipment"
                  sequence="10"/>
        <menuitem id="vtt_menu_repair_equipment_part"
                  name="Consume Parts"
                  action="sale.product_template_action"
                  parent="vtt_menu_repair_equipment"
                  sequence="20"/>
    </data>
</odoo>