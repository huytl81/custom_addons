<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Diagnosis views-->
    <data>
        <record id="vtt_view_form_repair_diagnosis" model="ir.ui.view">
            <field name="name">Diagnosis Form</field>
            <field name="model">vtt.repair.diagnosis</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_submit" type="object" string="Submit" class="btn-primary" invisible="state != 'new'"/>
                        <button name="action_approve" type="object" string="Approve" class="btn-primary" invisible="state != 'submit'"/>
                        <button name="action_cancel" type="object" string="Cancel" invisible="state not in ('new', 'submit')"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,approve,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <field name="priority" widget="priority_switch" class="me-3" readonly="1"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="repair_order_id"/>
                                <field name="partner_id"/>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="dt_diagnosis" invisible="state == 'approve'"/>
                                <field name="dt_approve" invisible="state != 'approve'"/>
                            </group>
                            <group>
                                <field name="equipment_id" domain="[('partner_id', '=', partner_id)]" context="{'default_partner_id': partner_id}"/>
                                <field name="equipment_model_name"/>
                                <field name="equipment_manufacture"/>
                                <field name="equipment_manufacture_year"/>
                                <field name="equipment_serial_number"/>
                            </group>
                            <group>
                                <field name="equipment_date_warranty"/>
                            </group>
                        </group>

                        <label for="description"/>
                        <field name="description" nolabel="1"/>

                        <notebook>
                            <page name="details" string="Estimation">
                                <field name="diagnosis_line_ids">
                                    <tree editable="top">
                                        <field name="diagnosis_id" column_invisible="1"/>
                                        <field name="name"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!--Tree view-->
        <record id="vtt_view_tree_repair_diagnosis" model="ir.ui.view">
            <field name="name">Diagnosis List</field>
            <field name="model">vtt.repair.diagnosis</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="priority" widget="priority"/>
                    <field name="name"/>
                    <field name="repair_order_id" optional="hide"/>
                    <field name="dt_diagnosis" widget="date"/>
                    <field name="partner_id"/>
                    <field name="equipment_id"/>
                    <field name="user_id" optional="show" widget="many2one_avatar_user"/>
                    <field name="activity_ids" widget="list_activity" optional="show"/>
                    <field name="state" widget="badge" decoration-info="state == 'submit'" decoration-success="state == 'approve'" decoration-danger="state == 'cancel'"/>
                    <field name="dt_approve" optional="hide"/>
                </tree>
            </field>
        </record>

        <!--Search view-->
        <record id="vtt_view_search_repair_diagnosis" model="ir.ui.view">
            <field name="name">Diagnosis Filter</field>
            <field name="model">vtt.repair.diagnosis</field>
            <field name="arch" type="xml">
                <search string="Diagnosis">
                    <field name="name" filter_domain="['|', '|', ('name', 'ilike', self), ('partner_id.name', 'ilike', self), ('equipment_id.name', 'ilike', self)]" string="Name"/>
                    <field name="partner_id"/>
                    <field name="equipment_id"/>
                    <field name="user_id"/>
                    <separator/>
                    <!--<filter string="Archived" domain="[('active', '=', False)]" name="inactive"/>-->
                    <filter string="My Diagnosis" domain="[('user_id', '=', uid)]" name="my_diags"/>
                    <separator/>
                    <filter string="Submitted" domain="[('state', '=', 'submit')]" name="state_submit"/>
                    <filter string="Approved" domain="[('state', '=', 'approve')]" name="state_approve"/>
                    <separator/>
                    <filter string="Diagnosis Date" name="filter_dt_diagnosis" date="dt_diagnosis" default_period="this_month"/>
                    <separator/>
                    <filter string="Approved Date" name="filter_dt_approve" date="dt_approve" default_period="this_month"/>
                    <group expand="0" string="Group By...">
                        <filter string="Partner" name="groupby_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                        <filter string="Equipment" name="groupby_equipment" domain="[]" context="{'group_by': 'equipment_id'}"/>
                        <filter string="User" name="groupby_user" domain="[]" context="{'group_by': 'user_id'}"/>
                        <filter string="Date" name="groupby_dt_diagnosis" domain="[]" context="{'group_by': 'dt_diagnosis:month'}"/>
                        <filter string="Status" name="groupby_state" domain="[]" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>

    <!--Actions-->
    <data>
        <record id="vtt_act_window_repair_diagnosis" model="ir.actions.act_window">
            <field name="name">Diagnosis</field>
            <field name="res_model">vtt.repair.diagnosis</field>
            <field name="view_mode">tree,form,activity</field>
        </record>
    </data>
</odoo>