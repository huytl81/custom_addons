<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--MRO Security groups-->
    <data>
        <record id="vtt_module_categ_mro" model="ir.module.category">
            <field name="name">MRO</field>
            <field name="parent_id" ref="base.module_category_sales"/>
            <field name="sequence">100</field>
        </record>

        <record id="vtt_group_mro_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
            <field name="category_id" ref="vtt_module_categ_mro"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="vtt_group_mro_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('vtt_group_mro_user'))]"/>
            <field name="category_id" ref="vtt_module_categ_mro"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>

    <!--Security rules-->
    <data>
        <!--Repair Orders-->
        <record id="vtt_rule_repair_order_mro_user" model="ir.rule">
            <field name="name">repair.order.mro.user</field>
            <field name="model_id" ref="model_vtt_repair_order"/>
            <field name="domain_force">[
                '|', ('user_id', '=', user.id),
                ('user_id', '=', False)
            ]</field>
            <field name="groups" eval="[(4, ref('vtt_group_mro_user'))]"/>
        </record>

        <record id="vtt_rule_repair_order_mro_manager" model="ir.rule">
            <field name="name">repair.order.mro.manager</field>
            <field name="model_id" ref="model_vtt_repair_order"/>
            <field name="domain_force">[
                (1, '=', 1)
            ]</field>
            <field name="groups" eval="[(4, ref('vtt_group_mro_manager'))]"/>
        </record>

        <!--Timesheet-->
        <record id="vtt_rule_timesheet_line_mro_user" model="ir.rule">
            <field name="name">account.analytic.line.mro.user</field>
            <field name="model_id" ref="analytic.model_account_analytic_line"/>
            <field name="domain_force">[
                ('user_id', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('vtt_group_mro_user'))]"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="vtt_rule_timesheet_line_mro_user_update" model="ir.rule">
            <field name="name">account.analytic.line.mro.user.update-unlink</field>
            <field name="model_id" ref="analytic.model_account_analytic_line"/>
            <field name="domain_force">[
                ('user_id', '=', user.id),
                ('validated', '=', False)
            ]</field>
            <field name="groups" eval="[(4, ref('vtt_group_mro_user'))]"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_read" eval="0"/>
        </record>
    </data>
</odoo>