<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Budget Custom Import Wz views-->
    <data>
        <!--Form view-->
        <record id="vtt_view_form_budget_custom_import_wz" model="ir.ui.view">
            <field name="name">Import Budget Items Wizard</field>
            <field name="model">vtt.budget.custom.import.wz</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="budget_template_id"/>
                            </group>
                            <group>
                                <field name="filename" invisible="1"/>
                                <field name="datas" filename="filename"/>
                            </group>
                        </group>

                    </sheet>
                    <footer>
                        <button string="Import Now" name="budget_custom_import" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>