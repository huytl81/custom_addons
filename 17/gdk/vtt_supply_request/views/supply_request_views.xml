<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Supply Request views-->
    <data>
        <!--Form view-->
        <record id="vtt_view_form_supply_request" model="ir.ui.view">
            <field name="name">Supply Request Form</field>
            <field name="model">vtt.supply.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_request" string="Request" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'request'"/>
                        <button name="action_done" string="Done" type="object" class="oe_highlight" invisible="state != 'confirm'"/>
                        <button name="action_cancel" string="Cancel" type="object" invisible="state not in ('request', 'confirm')"/>
                        <button name="action_draft" string="To Draft" type="object" invisible="state != 'cancel'"/>
                        <button name="create_picking" string="Create Picking" type="object" class="oe_highlight" invisible="need_picking == False"/>
                        <button name="action_create_draft_purchase" string="Create Purchase" type="object" invisible="state != 'confirm'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,request,confirm,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_picking" type="object"
                                    class="oe_stat_button" icon="fa-truck"
                                    invisible="picking_count == 0">
                                <div class="o_stat_info">
                                    <field name="picking_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Deliveries</span>
                                </div>
                            </button>
                            <button name="action_view_purchase" type="object"
                                    class="oe_stat_button" icon="fa-credit-card"
                                    invisible="purchase_count == 0">
                                <div class="o_stat_info">
                                    <field name="purchase_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Purchase Orders</span>
                                </div>
                            </button>
                        </div>

                        <!--invisible fields-->
                        <field name="picking_ids" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                        <field name="need_picking" invisible="1"/>
                        <field name="purchase_ids" invisible="1"/>

                        <div class="oe_title">
                            <!--<field name="priority" widget="priority_switch" class="me-3"/>-->
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="warehouse_id" readonly="state not in ('draft', 'request')"/>
                                <field name="location_dest_id" domain="[('warehouse_id', '=', warehouse_id)]" readonly="state not in ('draft', 'request')"/>
                            </group>
                            <group>
                                <field name="date" readonly="state not in ('draft', 'request')"/>
                                <field name="date_deadline" readonly="state not in ('draft', 'request')"/>
                                <field name="date_done" readonly="1"/>
                                <field name="request_user_id" readonly="state not in ('draft', 'request')"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Details">
                                <field name="line_ids" widget="section_and_note_one2many" readonly="state not in ('draft', 'request')">
                                    <tree editable="bottom">
                                        <field name="product_uom_category_id" column_invisible="True"/>
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id" domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" widget="sol_product_many2one" context="{'location': parent.location_dest_id, 'reversed_location': True}" options="{'no_create':True}"/>
                                        <field name="name" widget="section_and_note_text" optional="show"/>
                                        <field name="uom_id" domain="[('category_id', '=', product_uom_category_id)]" optional="show" context="{'default_category_id': product_uom_category_id}"/>
                                        <field name="product_uom_qty"/>
                                        <field
                                            name="qty_delivered"
                                            string="Delivered"
                                            column_invisible="parent.state in ('draft', 'cancel')"
                                            readonly="1"
                                            optional="show"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Internal Note">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!--List view-->
        <record id="vtt_view_tree_supply_request" model="ir.ui.view">
            <field name="name">Supply Request List</field>
            <field name="model">vtt.supply.request</field>
            <field name="arch" type="xml">
                <tree decoration-muted="state == 'cancel'">
                    <field name="date"/>
                    <field name="warehouse_id"/>
                    <field name="location_dest_id" optional="hide"/>
                    <field name="request_user_id"/>
                    <field name="date_deadline" optional="hide"/>
                    <field name="date_done" optional="hide"/>
                    <field name="state" widget="badge" decoration-success="state == 'done'" decoration-warning="state == 'request'" decoration-info="state == 'confirm'"/>
                </tree>
            </field>
        </record>

        <!--Search view-->
        <record id="vtt_view_search_supply_request" model="ir.ui.view">
            <field name="name">Supply Request Filter</field>
            <field name="model">vtt.supply.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" filter_domain="['|', '|', ('name', 'ilike', self), ('warehouse_id', 'ilike', self), ('request_user_id', 'ilike', self)]" string="Reference"/>
                    <field name="warehouse_id"/>
                    <field name="location_dest_id"/>
                    <field name="request_user_id"/>
                    <field name="line_ids" string="Product" filter_domain="[('line_ids.product_id', 'ilike', self)]"/>
                    <separator/>
                    <filter name="filter_request" string="Waiting" domain="[('state', '=', 'request')]"/>
                    <filter name="filter_confirm" string="Confirmed" domain="[('state', '=', 'confirm')]"/>
                    <filter name="filter_done" string="Done" domain="[('state', '=', 'done')]"/>
                    <separator/>
                    <filter name="date" string="Date" date="date"/>
                    <filter name="deadline" string="Deadline" date="date_deadline"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="groupby_status" domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Warehouse" name="groupby_warehouse" domain="[]" context="{'group_by': 'warehouse_id'}"/>
                        <filter string="Requester" name="groupby_request_user" domain="[]" context="{'group_by': 'request_user_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>

    <!--Actions-->
    <data>
        <record id="vtt_act_window_supply_request" model="ir.actions.act_window">
            <field name="name">Supply Requests</field>
            <field name="res_model">vtt.supply.request</field>
            <field name="view_mode">tree,form,activity</field>
        </record>
    </data>

    <!--Menus-->
    <menuitem id="vtt_menu_repair_repair"
              name="Supply Request"
              parent="stock.menu_stock_root"
              action="vtt_act_window_supply_request"
              sequence="3"/>
</odoo>