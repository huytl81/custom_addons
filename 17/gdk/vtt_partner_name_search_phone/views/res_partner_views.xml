<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Partner views-->
    <data>
        <!--Search view modify name search-->
        <record id="vtt_view_search_res_partner_name_search" model="ir.ui.view">
            <field name="name">Partner Filter modify Name Search</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="filter_domain">
                        ['|', '|', '|', '|', '|', '|',
                        ('complete_name', 'ilike', self), ('ref', '=', self),
                        ('email', 'ilike', self), ('vat', 'ilike', self), ('company_registry', 'ilike', self),
                        ('phone', 'ilike', self), ('mobile', 'ilike', self)]
                    </attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>