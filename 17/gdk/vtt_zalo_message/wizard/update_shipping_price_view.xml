<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_update_shipping_price_wizard_form" model="ir.ui.view">
        <field name="name">update.shipping.price.wizard.form</field>
        <field name="model">update.shipping.price.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Shipping Price">
                <group>
                    <field name="shipping_price"/>
                </group>
                <footer>
                    <button string="Update" type="object" name="update_shipping_price" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
