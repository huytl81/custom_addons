<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Project Type views-->
    <data>
        <!--Form view-->
        <record id="vtt_view_form_project_type" model="ir.ui.view">
            <field name="name">Project Type Form</field>
            <field name="model">vtt.project.type</field>
            <field name="arch" type="xml">
                <form string="Project Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Projects">
                                <field name="project_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>

    <!--Actions-->
    <data>
        <record id="vtt_act_window_project_type" model="ir.actions.act_window">
            <field name="name">Project Types</field>
            <field name="res_model">vtt.project.type</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>

    <!--Menus-->
    <data>
        <menuitem
            id="vtt_menu_project_config_project_type"
            name="Project Type"
            parent="project.menu_project_config"
            action="vtt_act_window_project_type"
            sequence="10"/>
    </data>
</odoo>