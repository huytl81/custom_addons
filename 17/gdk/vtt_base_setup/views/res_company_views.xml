<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Company views-->
    <data>
        <!--Form view-->
        <record id="vtt_view_form_res_company_favicon" model="ir.ui.view">
            <field name="name">Company Form add Favicon</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="color" position="after">
                    <field name="brand_title"/>
                    <field name="favicon" widget="image" options="{'size': [70, 70]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>