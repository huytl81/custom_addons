<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Custom Sales Report views-->
    <data>
        <!--Form view-->
        <record id="vtt_view_form_custom_sales_report_wz" model="ir.ui.view">
            <field name="name">Custom Sales Report Wizard Form</field>
            <field name="model">vtt.vhb.custom.sales.report.wz</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from" required="1"/>
                            </group>
                            <group>
                                <field name="date_to" required="1"/>
                            </group>
                        </group>
                        <footer>
                            <button string="Report Now" name="action_custom_sales_report" type="object" class="btn-primary" data-hotkey="q"/>
                            <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>