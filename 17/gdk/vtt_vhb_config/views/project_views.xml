<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Project views-->
    <data>
        <!--Form view-->
        <record id="vtt_view_form_project_sale_partner" model="ir.ui.view">
            <field name="name">Project Form show Partner</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="sale_project.view_edit_project_inherit_form"/>
            <field name="arch" type="xml">

                <field name="partner_id" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>
                <field name="partner_id" position="after">
                    <field name="sale_order_id"/>
                </field>
            </field>
        </record>

        <!--List view inherit show partner of all case-->
        <record id="vtt_view_tree_project_partner_info" model="ir.ui.view">
            <field name="name">Project List show all Partner</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="sale_project.project_project_view_tree_inherit_sale_project"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>