<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Users views-->
    <data>
        <!--Search view-->
        <record id="vtt_view_search_res_users_department" model="ir.ui.view">
            <field name="name">Users Filter Department</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_search"/>
            <field name="arch" type="xml">
                <field name="share" position="after">
                    <field name="department_id" filter_domain="[('employee_id.department_id','ilike',self)]" string="Department"/>
                </field>
            </field>
        </record>
    </data>
</odoo>