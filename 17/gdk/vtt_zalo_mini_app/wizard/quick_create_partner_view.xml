<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_quick_create_partner_form" model="ir.ui.view">
        <field name="name">quick.create.partner.form</field>
        <field name="model">quick.create.partner</field>
        <field name="arch" type="xml">
            <form string="Thêm khách hàng mới">
                <header>                    
                </header>
                <group string="Thông tin khách hàng" class="text-primary">
                    <field name="name" string="Tên khách hàng"/>
                    <field name="phone"/>
                    <field name="street" />
                    <field name="ward_id"/>
                    <field name="full_text_address" readonly="1"/>
                </group>
                <!-- <button string="Copy" type="object" name="copy" class="btn-secondary" icon="fa-copy"/> -->
                <group string="Thông tin giao hàng" class="text-primary">
                    <field name="delivery_name"/>                    
                    <field name="delivery_phone"/>
                    <field name="delivery_street" />
                    <field name="delivery_ward_id"/>
                    <field name="full_text_delivery_address" readonly="1"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>    
</odoo>
