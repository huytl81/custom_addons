<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_add_zalo_tag_form" model="ir.ui.view">
        <field name="name">partner.add.zalo.tag.form</field>
        <field name="model">partner.add.zalo.tag.wizard</field>
        <field name="arch" type="xml">
            <form string="Add zalo tag">
                <group>
                    <field name="shipping_price"/>
                    <field name="partner_ids"/>
                    <field name="tag_id"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm" class="btn-primary"/>                    
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
