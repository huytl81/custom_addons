<odoo>
    <!-- Partner views -->
  <data>
            <record id="view_zalo_partner_form" model="ir.ui.view">
                <field name="name">zalo.partner.form</field>
                <field name="model">res.partner</field>
                <field name="arch" type="xml">
                    <form string="Zalo partner">
                        <!-- <header invisible="type != 'zns_transaction'">
                            <button name="action_activate" type="object" string="Kích hoạt" class="btn-primary" invisible="enable == True"/>
                            <button name="action_deactivate" type="object" string="Bỏ kích hoạt" class="btn-secondary" invisible="enable != True"/>
                        </header> -->
                        <sheet>
                            <group>
                                <field name="name" string="Tên mẫu"/>
                                <field name="phone" string="Mẫu tin"/>
                                
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>


    <record id="zalo_partner_form_inherit" model="ir.ui.view">
        <field name="name">zalo.partner.form.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
<!--      <field name="mode">form</field>-->
      <field name="arch" type="xml">
         <!-- <xpath expr="//div[@class='oe_button_box']" position="before">
             <button name="load_data" type="object" string="Load Ward Data" class="oe_highlight"/>
         </xpath> -->

          <xpath expr="//div[@class='oe_button_box']" position="before">
              <field name="zalo_id" invisible="1"/>
              <div class="vtt_zalo_customer" invisible="not zalo_id">
                  <span class="o_tag position-relative d-inline-flex align-items-center user-select-none mw-100 o_badge badge rounded-pill lh-1 o_tag_color_2" tabindex="-1" data-color="2" title="Zalo customer">
                    <div class="o_tag_badge_text text-truncate">Khách hàng Zalo</div>
                  </span>
                  <br/>
              </div>
          </xpath>
          <xpath expr="//div[@class='oe_button_box']" position="inside">
              <button name="action_view_online_orders" type="object" class="oe_stat_button" icon="fa-shopping-cart">
                  <field name="online_order_count" widget="statinfo" string="Đơn hàng online"/>
              </button>
              <button name="action_abc" type="object" class="oe_stat_button" icon="fa-shopping-cart"/>
          </xpath>
          <xpath expr="//field[@name='ward_id']" position="attributes">
                <attribute name="string">Phường/Xã - Quận/Huyện - Tỉnh/TP</attribute>
                <attribute name="placeholder">Phường/Xã - Quận/Huyện - Tỉnh/TP</attribute>
                <attribute name="domain">[]</attribute>
            </xpath>
        <xpath expr="//field[@name='district_id']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='state_id']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//form/sheet/group" position="inside">
            <group string="Thông tin bổ sung">
                <field name="birth_day" />
                <field name="sex"/>                                
                <!-- <field name="birth_day_month" readonly="1"/>
                <field name="birth_day_day" readonly="1"/> -->
                <field name="loyalty_tier_id" string="Hạng thẻ" readonly="1"/>
                <field name="loyalty_points" string="Điểm tích lũy" readonly="1"/>
            </group>
        </xpath>
        <xpath expr="//form/sheet/group" position="inside">
            <group string="Zalo">                
                <!-- <field name="is_zalo_customer" readonly="1"/> -->
                <field name="zalo_id_by_oa" readonly="1"/>
                <field name="zalo_id" readonly="1"/>
                <field name="zalo_name" readonly="1"/>
                <!-- <field name="zalo_picture" readonly="1"/> -->
                <field name="followed_oa" readonly="1"/>
                <field name="followed_oa_time" readonly="1"/>
                <field name="unfollowed_oa_time" readonly="1"/>
                <field name="first_time_followed_oa" readonly="1"/>
                <!-- <field name="birth_day_month" readonly="1"/>
                <field name="birth_day_day" readonly="1"/> -->
            </group>
        </xpath>
        <!-- <xpath expr="//field[@name='vat']" position="after">
            <div class="o_address_format">
                <label for='birth_day' string="Ngày sinh"/>
                <field name="birth_day" />
            </div>            
        </xpath> -->
          <!-- <xpath expr="//field[@name='function']" position="before">
            
              
          </xpath> -->

          <field name="email" position="attributes">
                <attribute name="required">False</attribute>
            </field>
      </field>
    </record>

      <!-- hide sale order from zalo if state = draft and customer_confirmed = False -->
    <record id="contacts.action_contacts" model="ir.actions.act_window">
        <field name="domain">[('type', 'not in', ['delivery'])]</field>     
    </record>

      <!-- Định nghĩa hành động để hiển thị tree view các đơn hàng online -->
    <!-- <record id="action_view_online_orders" model="ir.actions.act_window">
        <field name="name">Online Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="vtt_zalo_mini_app.vtt_zalo_sale_order_tree"/>
        <field name="domain">[('is_online_order', '=', True), ('partner_id', '=', active_id)]</field>
        <field name="context">{'default_partner_id': active_id, 'default_is_online_order': True}</field>
    </record> -->

      <!-- Tree view for partners with online orders -->
    <record id="zalo_view_partner_tree_with_online_orders" model="ir.ui.view">
        <field name="name">zalo.res.partner.tree.with.online.orders</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Customers with Orders">
                <field name="name"/>                
                <field name="phone"/>
                <field name="sex" string="Giới tính"/>
                <field name="phone"/>                
                <field name="followed_oa"/>
                <field name="loyalty_tier_id" string="Hạng thẻ"/>
                <field name="loyalty_points" string="Điểm tích lũy"/> 
                <field name="online_order_count" string="Đơn hàng online"/>                
            </tree>
        </field>
    </record>

      <!-- Action to show partners with online orders -->
    <record id="action_partner_with_online_orders" model="ir.actions.act_window">
        <field name="name">Khách hàng</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="zalo_view_partner_tree_with_online_orders"/>
        <field name="domain">[('online_order_count', '>', 0)]</field>
        <!-- <field name="context">{'search_default_online_order_count': 1}</field> -->
    </record>

    
    <record id="action_partner_add_zalo_tag" model="ir.actions.server">
        <field name="name">Gắn zalo tag</field>
        <field name="model_id" ref="vtt_zalo_mini_app.model_res_partner"/>
        <field name="binding_model_id" ref="vtt_zalo_mini_app.model_res_partner"/>
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="code">
            action = records.add_zalo_tag()
        </field>
    </record>


    <record id="view_partner_tree_with_loyalty_info" model="ir.ui.view">
        <field name="name">res.partner.tree.loyalty.info</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree js_class="button_partner_in_tree">
                <field name="name"/>
                <field name="sex" string="Giới tính"/>
                <field name="phone"/>                
                <field name="followed_oa"/>
                <field name="full_text_address"/>
                <!-- <field name="followed_oa_time"/>
                <field name="first_time_followed_oa" /> -->
                <field name="loyalty_tier_id" string="Hạng thẻ"/>
                <field name="loyalty_points" string="Điểm tích lũy"/>                                
            </tree>
        </field>
    </record>

    <record id="action_view_partner_tree_with_loyalty_info" model="ir.actions.act_window">
        <field name="name">Khách hàng</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_partner_tree_with_loyalty_info"/>
        <field name="domain">[('type', '!=', 'delivery')]</field>
        <!-- <field name="domain">[('type', '!=', 'delivery'), ('is_zalo_customer', '=', True)]</field> -->
        <!-- <field name="context">{'show_extra_columns': False}</field> -->
    </record>

    <menuitem id="menu_partner_with_loyalty_info" name="Khách hàng Zalo" parent="contacts.menu_contacts" action="action_view_partner_tree_with_loyalty_info" sequence="1"/>

  </data>
</odoo>