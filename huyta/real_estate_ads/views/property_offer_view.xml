<?xml version="1.1" encoding="UTF-8"?>

<odoo>
    <record id="estate_property_offer_list_view" model="ir.ui.view">
        <field name="name">Estate Property Offer List View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Estate Property Offer List">
                <field name="price" string="Price"/>
                <field name="status" string="Status"/>
                <field name="partner_id" string="Customer"/>
                <field name="property_id" string="Property"/>
                <field name="validity" string="Validity (days)"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">Estate Property Offer Form View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer Form">
                <sheet>
                    <group>
                        <group>
                        <field name="price" string="Price"/>
                        <field name="status" string="Status"/>
                        <field name="partner_id" string="Customer"/>
                        <field name="property_id" string="Property"/>
                        </group>
                        <group>
                            <field name="created_date" string="Created Date"/>
                            <field name="validity" string="Validity (days)"/>
                            <field name="deadline" string="Deadline"/>
                        </group>
                    </group>
                </sheet>
                <!-- Discuss widgets -->
                <chatter/>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="estate_property_offer_list_view"/>
    </record>

    <menuitem id="estate_property_settings" name="Settings" parent="estate_menu_root" sequence="10"/>
    <menuitem id="estate_property_offer_menu" name="Property Offers" parent="estate_property_settings" action="estate_property_offer_action" sequence="20"/>
</odoo>